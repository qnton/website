---
import Layout from "@/components/layout/layout.astro";
import Typography from "@/components/ui/typography.astro";

import { Image } from "astro:assets";

import hm from "@/assets/images/hm-medizintechnik.jpg";
import hankens from "@/assets/images/hankens.jpg";
import Work from "@/components/work.astro";
---

<Layout
  description='HM-Medizintechnik Website Revamp - "2023"'
  footer
  header
  page="hm-medizintechnik"
  title="AW â€¢ HM-Medizintechnik"
>
  <main class="pt-15vh mx-5 flex flex-col items-center justify-center pb-64">
    <section class="pt-5vh lg:max-w-440 lg:min-w-440">
      <Typography
        className="animate-once noscript:animate-fade inline-block text-6xl opacity-0 lg:text-7xl"
        data-in-view-class="animate-fade"
        variant="h1"
      >
        HM-Medizintechnik Website Revamp - "2023"
      </Typography>

      <div
        class="animate-once noscript:animate-fade mt-12 overflow-hidden rounded-lg opacity-0"
        data-in-view-class="animate-fade"
      >
        <div
          class="relative -my-16 rounded-xl"
          data-parallax
        >
          <Image
            alt="HM Medizintechnik website on a phone"
            class="h-70vh animate-pulse-bg min-h-50 w-full object-cover transition duration-500"
            decoding="async"
            loading="lazy"
            src={hm}
          />
        </div>
      </div>
    </section>

    <section class="lg:max-w-432 lg:min-w-432">
      <Typography
        className="animate-once noscript:animate-fade opacity-0"
        data-in-view-class="animate-fade"
        variant="h2"
      >
        Revision of HM-Medizintechnik website with modern design
      </Typography>

      <Typography
        className="animate-once noscript:animate-fade text-zinc-500 opacity-0"
        data-in-view-class="animate-fade"
        variant="p"
      >
        In partnership with <a
          class="underline decoration-dotted transition-all duration-200 hover:text-zinc-600"
          href="https://www.linkedin.com/in/maximilianilts/"
          >my cousin</a
        >, we revamped HM-Medizintechnik's website, infusing modern design into
        a user-friendly interface.
      </Typography>

      <Typography
        className="animate-once noscript:animate-fade text-zinc-500 opacity-0"
        data-in-view-class="animate-fade"
        variant="p"
      >
        Leveraging Cloudflare Workers, we streamlined backend processes, storing
        form data in a Cloudflare KV store. This optimized workflow ensured
        swift confirmations and efficient data management.
      </Typography>

      <Typography
        className="animate-once noscript:animate-fade text-zinc-500 opacity-0"
        data-in-view-class="animate-fade"
        variant="p"
      >
        Our collaboration seamlessly merged design finesse with technical
        innovation, bringing forth a new era of digital engagement.
      </Typography>
    </section>

    <section class="pt-15vh w-full lg:max-w-440 lg:min-w-440">
      <Typography
        className="animate-once noscript:animate-fade opacity-0"
        component="h1"
        data-in-view-class="animate-fade"
        variant="h1"
      >
        Next project
      </Typography>

      <Work
        alt="Hankens testzentrum website on a phone"
        className="h-60vh min-h-50 object-[50%_50%]"
        description="A platform enabling users to easily locate nearby COVID-19 testing centers."
        image={hankens}
        link="/project/hankens-testzentrum"
        single
        title="Hankens"
        year="2022"
      />
    </section>
  </main>
</Layout>
